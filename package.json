{
  "name": "pwa-seed",
  "version": "0.1.0",
  "description": "PWA Seed for quick setup with websockets, routes, apis requests with web-services and client side application with react",
  "scripts": {
    "build:client-prod": "cd ./client/ && yarn && yarn build",
    "postbuild:client-prod": "yarn copy:client-prod",
    "copy:client-prod": "cpx \"./client/build/**/*\" ./src/dist",
    "start:server": "cd ./server/ && yarn && yarn start",
    "start:client": "cd ./client/ && yarn && yarn start",
    "prod": "npm-run-all --sequential start:server build:client-prod",
    "dev:server": "cd ./server/ && yarn &&  yarn dev",
    "dev": "npm-run-all --parallel dev:server start:client",
    "start": "npm-run-all --parallel start:server start:client"
  },
  "dependencies": {
    "cpx": "^1.5.0"
  },
  "devDependencies": {
    "husky": "^4.2.3",
    "lint-staged": "^10.0.9",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.2",
    "pretty-quick": "^2.0.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
